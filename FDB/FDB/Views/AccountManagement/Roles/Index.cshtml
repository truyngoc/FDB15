@model IEnumerable<FDB.Models.RoleViewModel>
@using FDB.Helpers;

@{
    ViewBag.Title = "Application Roles";
}

<div class="container fdb-div-content fdb-div-corner-all">
    <h3 class="text-center fdb-title-search-form">Danh sách quyền trên hệ thống</h3>
    <hr class="fdb-hr" />

    <p class="margin-top-05">
        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span> Thêm mới", "Thêm mới", "Create", "Roles", null, htmlAttributes: new { @class = "btn btn-primary btn-sm" })
    </p>

    <label id="lblMessageTotal" style="color:blue; font-weight:bold">Tổng số bản ghi: @ViewBag.TotalRow</label>
    <table class="table table-hover table-striped table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.RoleName }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.RoleName }) |
                    @Html.ActionLink("Phân quyền chức năng", "RoleAddMenu", new { id = item.RoleName })
                </td>
            </tr>
        }
    </table>
</div>