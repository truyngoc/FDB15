@model IEnumerable<FDB.Models.DM_NHOMNGHE>
@using FDB.Helpers;

@{
    ViewBag.Title = "Nhóm nghề";
}



<script>
    $(document).ready(function () {
        var url = "";

        $("#dialog-delete-confirm").dialog({
            autoOpen: false,
            resizable: false,
            height: 170,
            width: 350,
            show: { effect: 'drop', direction: "up" },
            modal: true,
            draggable: true,
            open: function (event, ui) {
                $(".ui-dialog-titlebar-close").hide();
            },
            buttons: {
                "OK": function () {
                    $(this).dialog("close");
                    window.location.href = url;
                },
                "Cancel": function () {
                    $(this).dialog("close");
                }
            }
        });

        // hien thi confirm dialog khi click delete tren grid
        $(".lnkDelete").click(function () {
            url = $(this).attr('href');
            $("#dialog-delete-confirm").dialog('open');

            return false;
        });

    });
</script>



<!-- Cac div de chua noi dung cho dialog -->
<div id="dialog-delete-confirm" style="display: none">
    <p>
        <span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 20px 0;"></span>
        Bạn có chắc chắn muốn xóa không?
    </p>
</div>








<div class="container fdb-div-content fdb-div-corner-all">
    <h3 class="text-center fdb-title-search-form">Danh sách nhóm nghề khai thác</h3>
    <hr class="fdb-hr" />

    @using (Html.BeginForm("Index", "DM_NHOMNGHE", FormMethod.Get))
    {
        <div class="row">
            <div class="col-md-2 control-label">
                Tên nhóm
            </div>
            <div class="col-md-4">
                <input type="text" name="txtTenNhom" class="form-control" />
            </div>

        </div>

        <br />
        <p class="margin-top-05">
            <button type="submit" class="btn btn-primary btn-sm">
                <span class="glyphicon glyphicon-search"></span> Tìm kiếm
            </button>

            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span> Thêm mới", "Thêm mới", "Create", "DM_NHOMNGHE", null, htmlAttributes: new { @class = "btn btn-primary btn-sm" })
        </p>
    }

    <label id="lblMessageTotal" style="color:blue; font-weight:bold">Tổng số bản ghi: @ViewBag.TotalRow</label>
    <table class="table table-hover table-bordered table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenNhomNghe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoTa)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="col-md-4">
                    @Html.DisplayFor(modelItem => item.TenNhomNghe)
                </td>
                <td class="col-md-7">
                    @Html.DisplayFor(modelItem => item.MoTa)
                </td>
                <td class="col-md-1 text-center">
                    <a href="@Url.Action("Edit", "DM_NHOMNGHE", new { id = item.DM_NhomNgheID })">
                        <img src="@Url.Content("~/fonts/grid-edit-icon.png")" title="Sửa" />
                    </a>

                    <a href="@Url.Action("Delete", "DM_NHOMNGHE", new { id = item.DM_NhomNgheID })" class="lnkDelete">
                        <img src="@Url.Content("~/fonts/grid-delete-icon1.gif")" title="Xóa" />
                    </a>
                </td>
            </tr>
        }

    </table>

</div>