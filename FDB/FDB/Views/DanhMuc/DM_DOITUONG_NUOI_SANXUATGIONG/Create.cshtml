@model FDB.Models.DM_DOITUONG_NUOI_SANXUATGIONG

@{
    ViewBag.Title = "Thêm mới đối tượng nuôi sản xuất giống";
}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<div class="container fdb-div-content fdb-div-corner-all">
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="row">
                <div class="col-md-2 control-label">
                    Tên đối tượng <label style="color:red;">(*)</label>

                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.TEN_DOI_TUONG, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TEN_DOI_TUONG)
                </div>


            </div>
            <br />
            <div class="row">
                <div class="col-md-2 control-label">
                    Mô tả

                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.MO_TA, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MO_TA)
                </div>


            </div>



            <br />
            <br />


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-danger btn-sm">
                        <span class="glyphicon glyphicon-floppy-disk"></span> Cập nhật
                    </button>
                    &nbsp;
                    @Html.ActionLink("Quay lại", "Index", "DM_DOITUONG_NUOI_SANXUATGIONG", null, new { @class = "btn btn-primary btn-sm" })
                </div>
            </div>
        </div>
    }
</div>
