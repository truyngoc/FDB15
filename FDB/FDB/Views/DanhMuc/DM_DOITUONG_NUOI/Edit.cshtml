@model FDB.Models.DM_DOITUONG_NUOI

@{
    ViewBag.Title = "Sửa thông tin đối tượng nuôi";
}

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<div class="container fdb-div-content fdb-div-corner-all">
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                @Html.LabelFor(model => model.DM_NHOMDOITUONG_NUOIID, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.DropDownList("DM_NhomNgheID", String.Empty)*@
                    @Html.DropDownListFor(model => model.DM_NHOMDOITUONG_NUOIID, (SelectList)ViewBag.DM_NHOMDOITUONG_NUOIs, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DM_NHOMDOITUONG_NUOIID)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TEN_DOI_TUONG, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.TEN_DOI_TUONG, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TEN_DOI_TUONG)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MO_TA, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.MO_TA, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MO_TA)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-danger btn-sm">
                        <span class="glyphicon glyphicon-floppy-disk"></span> Cập nhật
                    </button>
                    &nbsp;
                    @Html.ActionLink("Quay lại", "Index", "DM_DOITUONG_NUOI", null, new { @class = "btn btn-primary btn-sm" })
                </div>
            </div>
        </div>
    }

</div>