                    <option value="TH">Khánh Hòa</option>
                    <option value="TH">Sóc Trăng</option>
                    <option value="TH">Cà Mau</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 control-label">
                Người nhập
            </div>
            <div class="col-md-10">
                <input type="text" value="TruyBN" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 control-label">
                Ngày nhập
            </div>
            <div class="col-md-10">
                <input type="text" value="30/09/2015" class="form-control" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-8">
                <table class="table table-hover table-bordered table-condensed">
                    <tr>
                        <th>
                            Đối tượng khai thác
                        </th>
                        <th>
                            Nghề khai thác
                        </th>
                        <th>
                            Sản lượng
                        </th>
                        <th></th>
                    </tr>
                    @{
    for (var i = 0; i < 5; i++)
    {
        <tr>
            <td>
                <select class="form-control">
                    <option value="">Tôm</option>
                    <option value="">Mực ống</option>
                    <option value="">Mực nang</option>
                    <option value="">Cá chọn</option>
                    <option value="">Cá xô</option>
                    <option value="">...</option>
                </select>
            </td>
            <td>
                <select class="form-control">
                    <option value="">Kéo</option>
                    <option value="">Vây</option>
                    <option value="">Rê</option>
                    <option value="">Câu</option>
                    <option value="">Chụp mực</option>
                    <option value="">KT Cá ngừ ĐD</option>
                    <option value="">Khác</option>
                </select>
            </td>
            <td>
                <input type="text" value="500" class="form-control" />
            </td>
            <td>
                <a href="#">
                    <img src="@Url.Content("~/fonts/button-add-icon.png")" />
                </a>

                <a href="#">
                    <img src="@Url.Content("~/fonts/DELETE.GIF")" />
                </a>
            </td>
        </tr>
    }

                    }

                </table>
            </div>


            <div class="col-md-push-4"></div>
        </div>


        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
                &nbsp;
                @Html.ActionLink("Quay lại", "Index")
            </div>
            
        </div>
    </div>
}