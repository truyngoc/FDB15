@model FDB.Models.KT_KHUNEODAU
@{
    ViewBag.Title = "Khu neo đậu, tránh trú bão";
}


@using (Html.BeginForm("Create", "KT_KHUNEODAU", FormMethod.Post, new { @id = "formCreate" }))
{
    <div class="container fdb-div-content fdb-div-corner-all">
        @Html.AntiForgeryToken()



        <div class="form-horizontal">
            <br />
            <fieldset class="fdb-scheduler-border">
                <legend class="fdb-scheduler-border">Thông tin khu neo đậu, tránh trú bão</legend>
                <div class="row margin-top-05">
                    <div class="col-md-2 control-label text-left">
                        Tên khu neo đậu <label style="color:red;">(*)</label>
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.TEN_KHUNEODAU, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TEN_KHUNEODAU)
                    </div>
                </div>

                <div class="row margin-top-05">
                    <div class="col-md-2 control-label text-left">
                        Loại khu neo đậu <label style="color:red;">(*)</label>
                    </div>
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.DPHAN_LOAI_KHUNEODAUID, (SelectList)ViewBag.LOAIKHUNEODAUs, "--Chọn loại khu neo đậu--", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DPHAN_LOAI_KHUNEODAUID)
                    </div>
                </div>

                <div class="row margin-top-05">
                    <div class="col-md-2 control-label text-left">
                        Tỉnh/TP <label style="color:red;">(*)</label>

                    </div>
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.MA_TINHTP, (SelectList)ViewBag.DTINHTPs, new { @class = "form-control", @id = "province_dll" })
                        @Html.ValidationMessageFor(model => model.MA_TINHTP)
                    </div>


                </div>

                <div class="row margin-top-05">
                    <div class="col-md-2 control-label text-left">
                        Quận/Huyện
                    </div>
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.MA_QUANHUYEN, (SelectList)ViewBag.DEFAULT_VALUE_DDL, string.Empty, new { @class = "form-control", @id = "district_dll" })
                        @Html.ValidationMessageFor(model => model.MA_QUANHUYEN)
                    </div>
                </div>

                <div class="row margin-top-05">
                    <div class="col-md-2 control-label text-left">
                        Xã/phường
                    </div>
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.MA_PHUONGXA, (SelectList)ViewBag.DEFAULT_VALUE_DDL, string.Empty, new { @class = "form-control", @id = "ward_dll" })
                        @Html.ValidationMessageFor(model => model.MA_PHUONGXA)
                    </div>
                </div>



                <div class="row margin-top-05">
                    <div class="col-md-2 control-label text-left">
                        Địa chỉ <label style="color:red;">(*)</label>
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.DIA_CHI, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DIA_CHI)
                    </div>
                </div>

                <div class="row margin-top-05">
                    <div class="col-md-2 control-label text-left">
                        Số điện thoại
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.SO_DIEN_THOAI, new { @class = "form-control", @type = "number" })
                        @Html.ValidationMessageFor(model => model.SO_DIEN_THOAI)
                    </div>
                </div>

                <div class="row margin-top-05">
                    <div class="col-md-2 control-label text-left">
                        Tần số liên lạc
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.TAN_SO, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TAN_SO)
                    </div>
                </div>

                <div class="row margin-top-05">
                    <div class="col-md-2 control-label text-left">
                        Vĩ độ <label style="color:red;">(*)</label>
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.VIDO, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.VIDO)
                    </div>
                </div>
                <div class="row margin-top-05">
                    <div class="col-md-2 control-label text-left">
                        Kinh độ <label style="color:red;">(*)</label>
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.KINHDO, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.KINHDO)
                    </div>
                </div>
            </fieldset>
            <br />


            <fieldset class="fdb-scheduler-border">
                <legend class="fdb-scheduler-border">Đặc điểm kỹ thuật khu neo đậu</legend>

                <div class="row margin-top-05">
                    <div class="col-md-2 control-label text-left">
                        Công suất tàu tối đa được neo đậu (CV)
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(model => model.CONGSUATTAU_NEODAU, new { @class = "form-control", data_val_number = "Công suất tàu tối đa được neo đậu phải là số." })
                        @Html.ValidationMessageFor(model => model.CONGSUATTAU_NEODAU)
                    </div>


                </div>

                <div class="row margin-top-05">
                    <div class="col-md-2 control-label text-left">
                        Độ sâu vùng nước đậu tàu (m)
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(model => model.DOSAU_DAUTAU, new { @class = "form-control", data_val_number = "Độ sâu vùng nước đậu tàu phải là số." })
                        @Html.ValidationMessageFor(model => model.DOSAU_DAUTAU)
                    </div>


                </div>

                <div class="row margin-top-05">

                    <div class="col-md-2 control-label text-left">
                        Vị trí bắt đầu vào luồng
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(model => model.VITRI_VAOLUONG, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.VITRI_VAOLUONG)
                    </div>
                </div>

                <div class="row margin-top-05">

                    <div class="col-md-2 control-label text-left">
                        Hướng luồng
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(model => model.HUONG_LUONG, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.HUONG_LUONG)
                    </div>
                </div>

                <div class="row margin-top-05">

                    <div class="col-md-2 control-label text-left">
                        Chiều dài luồng(m)
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(model => model.CHIEUDAI_LUONG, new { @class = "form-control", data_val_number = "Chiều dài luồng phải là số." })
                        @Html.ValidationMessageFor(model => model.CHIEUDAI_LUONG)
                    </div>
                </div>



                <div class="row margin-top-05">
                    <div class="col-md-2 control-label text-left">
                        Số lượng tàu được neo đậu
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(model => model.SOLUONGTAU_NEODAU, new { @class = "form-control", data_val_number = "Số lượng tàu neo đậu phải là số." })
                        @Html.ValidationMessageFor(model => model.SOLUONGTAU_NEODAU)
                    </div>


                </div>

                <div class="row margin-top-05">
                    <div class="col-md-2 control-label text-left">
                        Phao neo đậu độc lập (cái)
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(model => model.PHAO_NEODAU, new { @class = "form-control", data_val_number = "Phao neo đậu phải là số." })
                        @Html.ValidationMessageFor(model => model.PHAO_NEODAU)
                    </div>


                </div>

                <div class="row margin-top-05">
                    <div class="col-md-2 control-label text-left">
                        Phao tiêu báo hiệu (cái)
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(model => model.PHAOTIEU, new { @class = "form-control", data_val_number = "Phao tiêu báo hiệu phải là số." })
                        @Html.ValidationMessageFor(model => model.PHAOTIEU)
                    </div>


                </div>

                <div class="row margin-top-05">
                    <div class="col-md-2 control-label text-left">
                        Trụ neo bờ độc lập (cái)
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(model => model.TRUNEO, new { @class = "form-control", data_val_number = "Trụ neo phải là số." })
                        @Html.ValidationMessageFor(model => model.TRUNEO)
                    </div>


                </div>
                </fieldset>
</div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <button type="submit" class="btn btn-danger btn-sm">
                <span class="glyphicon glyphicon-floppy-disk"></span> Cập nhật
            </button>
            &nbsp;
            @Html.ActionLink("Quay lại", "Index", "KT_KHUNEODAU", null, new { @class = "btn btn-primary btn-sm" })
        </div>
    </div>

}


<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/additional-methods.min.js"></script>
<script src="~/Scripts/jquery-ui-1.11.4.js"></script>
<script src="//code.jquery.com/ui/1.11.2/jquery-ui.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.maskedinput.js"></script>
<script src="~/Scripts/jquery.maskMoney.js"></script>
<script src="~/Scripts/jquery.number.js"></script>
<script src="~/Scripts/datepicker.js"></script>
<script src="~/Scripts/moment.js"></script>
<script src="~/Scripts/CustomValidation.js"></script>

<script>
    $(document).ready(function () {
        // load district by province when change in dropdownlist
        //$("#province_dll").change(function () {
        $.ajax({
            url: 'getDistrict',
            type: 'post',
            data: {
                ma_TinhTP: $('#province_dll').val()
            }
        }).done(function (response) {
            // update district by province
            var a = '<option value></option>' + response;   // defaut value
            $("#district_dll").html(a);

            // reset ward
            var b = '<option value></option>'
            $('#ward_dll').html(b);
        });
        //});


        // load ward by disctrict when change in dropdownlist
        $("#district_dll").change(function () {
            $.ajax({
                url: 'getWard',
                type: 'post',
                data: {
                    ma_QuanHuyen: $('#district_dll').val()
                }
            }).done(function (response) {
                var a = '<option value></option>' + response;   // defaut value
                $("#ward_dll").html(a);
            });
        });
    });

</script>
