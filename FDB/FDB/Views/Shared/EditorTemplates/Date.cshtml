@model DateTime?
@{
    var value = "";
    if (Model.HasValue) {
        value = String.Format("{0:d}", Model.Value.ToString("dd/MM/yyyy"));
    }
}
@Html.TextBox("", value, new { @class = "datepicker form-control", type = "text" })


